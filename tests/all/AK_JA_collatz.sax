type bin = +{'b0 : bin, 'b1 : bin, 'e : 1}
type bool = +{'false : 1, 'true : 1}

proc zero (d : bin) =
  cut u : 1
    write u ()
  write d 'e(u)

proc one (d : bin) =
  cut x : bin
    call zero x
  write d 'b1(x)

proc succ (d : bin) (x : bin) =
  read x {
  | 'b0(x0) => write d 'b1(x0)
  | 'b1(x1) => cut y : bin
                  call succ y x1
               write d 'b0(y)
  | 'e(u) => read u ()
             call one d
  }

proc two (d : bin) =
  cut x : bin
    call one x
  call succ d x

proc three (d : bin) =
  cut x : bin
    call two x
  call succ d x

proc four (d : bin) =
  cut x : bin
    call three x
  call succ d x

proc five (d : bin) =
  cut x : bin
    call four x
  call succ d x

proc dec (d : bin) (x : bin) =
  read x {
  | 'b0(x0) => cut y : bin
                call dec y x0
                write d 'b1(y)
  | 'b1(x1) => 
    read x1 {
      | 'b0(x0) => cut y : bin
                    write y 'b0(x0)
                    write d 'b0(y)
      | 'b1(x1) => cut y : bin
                    write y 'b1(x1)
                    write d 'b0(y)
      | 'e(u) => write d 'e(u)
    }
  | 'e(u) => write d 'e(u)
  }

proc add (d : bin) (x : bin) (y : bin) =
  read x {
  | 'b0(x0) => read y {
    | 'b0(y0) => cut z : bin
                  call add z x0 y0
                  write d 'b0(z)
    | 'b1(y1) => cut z : bin
                  call add z x0 y1
                  write d 'b1(z)
    | 'e(u) => read u ()
                write d 'b0(x0)
    }
  | 'b1(x1) => read y {
    | 'b0(y0) => cut z : bin
                  call add z x1 y0
                  write d 'b1(z)
    | 'b1(y1) => cut z0 : bin
                  call add z0 x1 y1
                  cut z : bin
                  call succ z z0
                  write d 'b0(z)
    | 'e(u) => read u ()
                write d 'b1(x1)
    }
  | 'e(u) => read u ()
              id d y
  }

proc dealloc_bin (d : 1) (x : bin) =
  read x {
  | 'b0(x0) => call dealloc_bin d x0
  | 'b1(x1) => call dealloc_bin d x1
  | 'e(u) => id d u
  }

proc dup_bin (d : bin * bin) (x : bin) =
  // write d (x, x)
  read x {
  | 'b0(x) => cut y : bin * bin
                 call dup_bin y x
              read y (y1, y2)
              cut d1 : bin
                write d1 'b0(y1)
              cut d2 : bin
                write d2 'b0(y2)
              write d (d1, d2)
  | 'b1(x) => cut y : bin * bin
                 call dup_bin y x
              read y (y1, y2)
              cut d1 : bin
                write d1 'b1(y1)
              cut d2 : bin
                write d2 'b1(y2)
              write d (d1, d2)
  | 'e(u) => cut d1 : bin
                write d1 'e(u)
             cut d2 : bin
                cut w : 1
                   write w ()
                write d2 'e(w)
             write d (d1, d2)
  }

proc mult (d : bin) (x : bin) (y : bin) =
  read x {
  | 'b0(x0) =>  cut x_ : bin
                write x_ 'b0(x0)
                cut t : bin
                call dec t x_
                cut ys : bin * bin
                call dup_bin ys y
                read ys (y1, y2)
                cut z : bin
                call mult z t y1
                call add d z y2
  | 'b1(x1) =>  cut x_ : bin
                write x_ 'b1(x1)
                cut t : bin
                call dec t x_
                cut ys : bin * bin
                call dup_bin ys y
                read ys (y1, y2)
                cut z : bin
                call mult z t y1
                call add d z y2
  | 'e(u) => cut v : 1
              call dealloc_bin v y
              read v ()
              write d 'e(u)
  }

proc mod2 (d : bool) (x : bin) =
  read x {
  | 'b0(x0) =>  cut y : bin
                write y 'b0(x0)
                cut x_ : bin
                call dec x_ y
                read x_ {
                | 'b0(x0) =>  cut y_ : bin
                              write y_ 'b0(x0)
                              cut x__ : bin
                              call dec x__ y_
                              call mod2 d x__
                | 'b1(x1) =>  cut y_ : bin
                              write y_ 'b1(x1)
                              cut x__ : bin
                              call dec x__ y_
                              call mod2 d x__
                | 'e(u) => write d 'false(u)
                }
  | 'b1(x1) => cut y : bin
                write y 'b1(x1)
                cut s : bin
                call dec s y
                read s {
                | 'b0(x0) =>  cut y_ : bin
                              write y_ 'b0(x0)
                              cut x__ : bin
                              call dec x__ y_
                              call mod2 d x__
                | 'b1(x1) =>  cut y_ : bin
                              write y_ 'b1(x1)
                              cut x__ : bin
                              call dec x__ y_
                              call mod2 d x__
                | 'e(u) => write d 'false(u)
                }
  | 'e(u) => write d 'true(u)
  }

proc div2 (d : bin) (x : bin) =
  read x {
  | 'b0(x0) =>  cut y : bin
                write y 'b0(x0)
                cut s : bin
                call dec s y
                read s {
                | 'b0(x0) =>  cut y_ : bin
                              write y_ 'b0(x0)
                              cut x__ : bin
                              call dec x__ y_
                              cut r : bin
                              call div2 r x__
                              call succ d r
                | 'b1(x1) =>  cut y_ : bin
                              write y_ 'b1(x1)
                              cut x__ : bin
                              call dec x__ y_
                              cut r : bin
                              call div2 r x__
                              call succ d r
                | 'e(u) => write d 'e(u)
                }
  | 'b1(x1) => cut y : bin
                write y 'b1(x1)
                cut s : bin
                call dec s y
                read s {
                | 'b0(x0) =>  cut y_ : bin
                              write y_ 'b0(x0)
                              cut x__ : bin
                              call dec x__ y_
                              cut r : bin
                              call div2 r x__
                              call succ d r
                | 'b1(x1) =>  cut y_ : bin
                              write y_ 'b1(x1)
                              cut x__ : bin
                              call dec x__ y_
                              cut r : bin
                              call div2 r x__
                              call succ d r
                | 'e(u) => write d 'e(u)
                }
  | 'e(u) => write d 'e(u)
  }

proc collatz (d : bin) (x : bin) =
  read x {
  | 'b0(x0) =>  cut y : bin
                write y 'b0(x0)
                cut x_ : bin
                call div2 x_ y
                cut r : bin
                call collatz r x_
                call succ d r
  | 'b1(x1) => read x1 {
    | 'b0(x0) =>  cut y0 : bin
                  write y0 'b0(x0)
                  cut y1 : bin
                  write y1 'b1(y0)
                  cut y2 : bin
                  call three y2
                  cut y3 : bin
                  call mult y3 y1 y2
                  cut x__ : bin
                  call succ x__ y3
                  cut r_ : bin
                  call collatz r_ x__
                  call succ d r_
    | 'b1(x1) =>  cut y0 : bin
                  write y0 'b1(x1)
                  cut y1 : bin
                  write y1 'b1(y0)
                  cut y2 : bin
                  call three y2
                  cut y3 : bin
                  call mult y3 y1 y2
                  cut x___ : bin
                  call succ x___ y3
                  cut r_ : bin
                  call collatz r_ x___
                  call succ d r_
    | 'e(u) => write d 'e(u)
    }
  | 'e(u) => write d 'e(u)
  }

proc test1 (d : bin) =
  cut x : bin
    call two x
  call collatz d x

proc test2 (d : bin) =
  cut x : bin
    call five x
  cut y : bin
    call three y
  cut z : bin
    call mult z x y
  call collatz d z

proc test3 (d : bin) =
  cut x : bin
    call three x
  call collatz d x

proc test4 (d : bin) =
  cut x1 : bin
    call five x1
  cut x2 : bin
    call four x2
  cut x : bin
    call add x x1 x2
  call collatz d x
